image: registry.itdog.me/acme-sh:latest
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: registry.itdog.me/acme-sh:{{#if build.tag}}{{build.tag}}-{{/if}}linux-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: registry.itdog.me/acme-sh:{{#if build.tag}}{{build.tag}}-{{/if}}linux-arm64
    platform:
      architecture: arm64
      os: linux
      variant: v8
  -
    image: registry.itdog.me/acme-sh:{{#if build.tag}}{{build.tag}}-{{/if}}linux-arm
    platform:
      architecture: arm
      os: linux
      variant: v7
